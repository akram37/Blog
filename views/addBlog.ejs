<!DOCTYPE html>
<html lang="en" dir="ltr">
  <head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Add Blog</title> 
    <link rel="stylesheet" href="stylesheets/style.css">
   </head>
<body>
  <div class="wrapper">
    <h2>Registration</h2>
    <% if (typeof errors !== 'undefined' && errors.length > 0) { %>
      <div class="alert alert-danger">
        <ul>
          <% errors.forEach(function (error) { %>
            <li><%= error.msg %></li>
          <% }); %>
        </ul>
      </div>
    <% } %>
    <form action="/addBlog" method="post" enctype="multipart/form-data">
      <div class="input-box">
        <input type="text" placeholder="Enter Title" name="username" required>
      </div>
      <div class="input-box">
        <input type="password" placeholder="Enter Description" name="password" required>
      </div>
      <div class="input-box">
        <input type="password" placeholder="Enter Text" name="confirmpassword" required>
      </div>
      <div class="input-box">
        <input type="file" name="blogImage" accept="image/png, image/jpg, image/jpeg" />
      </div>
      <div class="input-box button">
        <input type="Submit" value="Add Blog Now">
      </div>
    </form>
  </div>
</body>
</html>